<% @rental.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>

<%= form_with model: @rental, local: true do |f| %>
    <div>
        <%= f.label :start_date %>
        <%= f.date_field :start_date %>
    </div>
    <div>
        <%= f.label :end_date %>
        <%= f.date_field :end_date %>
    </div>
    <div>
        <%= f.label :customer_id %>
        <%= f.collection_select :customer_id, @customers, :id, :information, prompt: 'Escolha o cliente' %>
    </div>
    <div>
        <%= f.label :car_category_id %>
        <%= f.collection_select :car_category_id, @car_categories, :id, :name, prompt: 'Escolha uma categoria de carro' %>
    </div>
    <%= f.submit 'Agendar' %>
<% end %>